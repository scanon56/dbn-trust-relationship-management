{
  "name": "dbn-trust-relationship-management",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --config jest.config.cjs --runInBand",
    "test:watch": "jest --config jest.config.cjs --watch --runInBand",
    "test:coverage": "jest --config jest.config.cjs --coverage --runInBand",
    "migrate": "tsx src/infrastructure/database/migrate.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "playground:dev": "vite examples/dual-agent-playground",
    "playground:build": "vite build examples/dual-agent-playground --outDir examples/dual-agent-playground/dist",
    "playground:preview": "vite preview examples/dual-agent-playground/dist",
    "demo": "concurrently -k -n API,WEB -c green,cyan \"npm:dev\" \"npm:playground:dev\"",
    "dev:agent2": "PORT=3002 DIDCOMM_ENDPOINT=http://localhost:3002/didcomm tsx watch src/server.ts",
    "demo:dual": "concurrently -k -n A,B,WEB -c green,magenta,cyan \"npm:dev:agentA\" \"npm:dev:agentB\" \"npm:playground:dev\""
    ,"migrate:agentA": "DB_NAME=dbn_trust_management_a npm run migrate"
    ,"migrate:agentB": "DB_NAME=dbn_trust_management_b npm run migrate"
    ,"dev:agentA": "PORT=3001 DB_NAME=dbn_trust_management_a DIDCOMM_ENDPOINT=http://localhost:3001/didcomm tsx watch src/server.ts"
    ,"dev:agentB": "PORT=3002 DB_NAME=dbn_trust_management_b DIDCOMM_ENDPOINT=http://localhost:3002/didcomm tsx watch src/server.ts"
    ,"demo:dual:db": "concurrently -k -n A,B,WEB -c green,magenta,cyan \"npm:dev:agentA\" \"npm:dev:agentB\" \"npm:playground:dev\""
    ,"db:up": "docker compose up -d postgres"
    ,"db:down": "docker compose stop postgres"
    ,"db:logs": "docker compose logs -f postgres"
    ,"db:test:up": "docker run --name dbn-postgres-test -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=dbn_trust_management_test -p 5433:5432 -d postgres:16-alpine"
    ,"db:test:down": "docker rm -f dbn-postgres-test"
    ,"db:test:reset": "docker rm -f dbn-postgres-test || true && npm run db:test:up"
    ,"migrate:test": "NODE_ENV=test DOTENV_CONFIG_PATH=.env.test tsx src/infrastructure/database/migrate.ts"
    ,"decode:oob": "node scripts/decode-oob.js"
    ,"handshake:log": "tsx scripts/handshake-state-log.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^5.4.10",
    "concurrently": "^9.0.1"
  }
}
