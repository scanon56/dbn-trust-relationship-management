# .env.example
NODE_ENV=development
PORT=3001

# Database (choose one credential set)
DB_HOST=localhost
DB_PORT=5432

# Default local dev (no Docker compose)
DB_NAME=dbn_trust_management
DB_USER=postgres
DB_PASSWORD=postgres

# Docker Compose variant (uncomment to use)
# DB_NAME=dbn_platform
# DB_USER=dbn_user
# DB_PASSWORD=dbn_password

DB_MAX_CONNECTIONS=20

# Phase 4 API (DID Service)
PHASE4_API_URL=http://localhost:3000
PHASE4_TIMEOUT=30000

# DIDComm
DIDCOMM_ENDPOINT=http://localhost:3001/didcomm
DEFAULT_DID=did:web:localhost:alice

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json